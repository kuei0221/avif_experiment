
<div class='row justify-content-center my-5'>
  <h3>Create New Product With Photo</h3>
</div>

<div class= "row justify-content-center">
  <%= form_for @product, url: products_path, html: { multipart: true, class: 'col-3 bg-light' } do |form| %>
    <div class= "form-group my-3">
      <%= form.label :photo_image_size %>
      <%= form.select :photo_image_size, options_for_select(['400px', '600px', '800px', '1200px', '1600px']), {}, {class: 'form-control'} %>
    </div>
    <div class="form-group mb-3">
      <%= form.label :photo %>
      <%= form.file_field :photo, class: "form-control-file" %>
    </div>
    <div>
      <%= form.submit "Create", class: 'btn btn-primary mb-2'%>
    </div>
    <%= link_to 'Return to Product Index', products_path, class: "btn btn-sm btn-secondary my-3" %>
  <% end %>
</div>

